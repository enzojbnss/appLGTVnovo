<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxautomacao.notificacaosenha"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.maxautomacao.notificacaosenha.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maxautomacao.notificacaosenha.NotificacaoActivity"
            android:label="@string/title_activity_notificacao" >
        </activity>
        <activity
            android:name="com.maxautomacao.notificacaosenha.ServiceActivity"
            android:label="@string/title_activity_service" >
        </activity>
        <activity
            android:name="com.maxautomacao.notificacaosenha.ServiceSettingsActivity"
            android:label="@string/title_activity_service_settings" >
        </activity>
    </application>

</manifest>
