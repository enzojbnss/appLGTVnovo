<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ServiceSettingsActivity" >

    <TextView
        android:id="@+id/lblServiceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblServicoLabel" />

    <TextView
        android:id="@+id/lblServidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblServiceLabel"
        android:layout_below="@+id/lblServiceLabel"
        android:layout_marginTop="40dp"
        android:text="@string/lblServidor" />

    <EditText
        android:id="@+id/txtServidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblServidor"
        android:layout_alignBottom="@+id/lblServidor"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/lblServidor"
        android:ems="10" />

    <Button
        android:id="@+id/btnGravar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblServidor"
        android:layout_below="@+id/txtServidor"
        android:layout_marginTop="37dp"
        android:text="Salvar" />

</RelativeLayout>